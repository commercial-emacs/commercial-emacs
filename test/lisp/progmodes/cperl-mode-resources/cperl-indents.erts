Name: cperl-feature-class

=-=
use 5.038;
use feature "class";
no warnings "experimental";

class A {
}

class C
  : isa(A)
{
  method with_sig_and_attr
    : lvalue
    ($top,$down)
  {
    return $top-$down;
  }
}

say "done!";
